<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/musicbynumbersbg"
        android:orientation="vertical"
        android:layout_weight="100" >
         <ImageButton
            android:id="@+id/imagelogo"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_weight="10"
            android:gravity="center"
            android:background="@drawable/topbanner"/>
        
        
       <ScrollView android:layout_weight="90" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		  

		<LinearLayout android:orientation="vertical"
			android:layout_width="match_parent" android:layout_height="match_parent">
			<TextView
            android:id="@+id/majarptv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Major Arpeggios"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/aflatmajarpb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A Flat Major Arpeggio" />

        <Button
            android:id="@+id/amajarpb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A Major Arpeggio" />

        <Button
            android:id="@+id/bflatmajarpb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B Flat Major Arpeggio" />

        <Button
            android:id="@+id/bmajarpb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B Major Arpeggio" />

        <Button
            android:id="@+id/cmajarpb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C Major Arpeggio" />

        <Button
            android:id="@+id/dflatmajarpb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D Flat Major Arpeggio" />

        <Button
            android:id="@+id/dmajarpb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D Major Arpeggioc" />

        <Button
            android:id="@+id/eflatmajarpb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:text="E Flat Major Arpeggio" />

        <Button
            android:id="@+id/emajarpb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:text="E Major Arpeggio" />
        <Button
            android:id="@+id/fmajarpb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="F Major Arpeggio" />

        <Button
            android:id="@+id/fsharpmajarpb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="F Sharp Major Arpeggio" />

        <Button
            android:id="@+id/gmajarpb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:text="G Major Arpeggio" />

        
		
		</LinearLayout>
	</ScrollView>

      

    </LinearLayout>
